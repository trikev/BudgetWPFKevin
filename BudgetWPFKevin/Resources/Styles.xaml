<!-- Styles.xaml -->
<ResourceDictionary xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
                    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
                    xmlns:converters="clr-namespace:BudgetWPFKevin.Converters">

    <Thickness x:Key="SectionMargin">10</Thickness>

    <converters:StringToVisibilityConverter x:Key="StringToVisibilityConverter"/>

    <Style x:Key="SectionHeaderText" TargetType="TextBlock">
        <Setter Property="FontSize" Value="18"/>
        <Setter Property="FontWeight" Value="Bold"/>
        <Setter Property="Margin" Value="0,0,0,5"/>
    </Style>

    <Style TargetType="Window">
        <Setter Property="FontFamily" Value="pack://application:,,,/Fonts/#Nunito Light"/>
    </Style>

    <!-- Standard TextBlock Style -->
    <Style TargetType="TextBlock">
        <Setter Property="FontFamily" Value="pack://application:,,,/Fonts/#Nunito Light"/>
        <Setter Property="FontSize" Value="14"/>
        
    </Style>

    <!-- Standard TextBox Style -->
    <Style TargetType="TextBox">
        <Setter Property="FontSize" Value="14"/>
        <Setter Property="Padding" Value="5"/>
        <Setter Property="Margin" Value="0,0,0,15"/>
    </Style>

    <!-- Standard ComboBox Style -->
    <Style TargetType="ComboBox">
        <Setter Property="FontSize" Value="14"/>
        <Setter Property="Padding" Value="5"/>
        <Setter Property="Margin" Value="0,0,0,15"/>
    </Style>

    <!-- Standard Button Style -->
    <Style TargetType="Button">
        <Setter Property="FontSize" Value="14"/>
        <Setter Property="Padding" Value="15,8"/>
        <Setter Property="Margin" Value="5"/>
        <Setter Property="MinWidth" Value="100"/>
    </Style>

    <!-- ListBox Style för transaktionslistor -->
    <Style TargetType="ListBox">
        <Setter Property="BorderBrush" Value="#BDBDBD"/>
        <Setter Property="BorderThickness" Value="1"/>
        <Setter Property="Background" Value="White"/>
        <Setter Property="ScrollViewer.HorizontalScrollBarVisibility" Value="Disabled"/>
        <Setter Property="ScrollViewer.VerticalScrollBarVisibility" Value="Auto"/>
        <Setter Property="MaxHeight" Value="400"/>
        <Setter Property="Margin" Value="0,5,0,0"/>
    </Style>

    <!-- ListBoxItem Style för transaktioner -->
    <Style TargetType="ListBoxItem">
        <Setter Property="HorizontalContentAlignment" Value="Stretch"/>
        <Setter Property="Padding" Value="0"/>
        <Setter Property="Margin" Value="0"/>
        <Setter Property="Background" Value="Transparent"/>
        <Setter Property="BorderThickness" Value="0"/>
        <Style.Triggers>
            <Trigger Property="IsMouseOver" Value="True">
                <Setter Property="Background" Value="#F5F5F5"/>
            </Trigger>
            <Trigger Property="IsSelected" Value="True">
                <Setter Property="Background" Value="#E3F2FD"/>
            </Trigger>
        </Style.Triggers>
    </Style>

    <!-- Style för sammanfattningskort -->
    <Style x:Key="SummaryCard" TargetType="Border">
        <Setter Property="CornerRadius" Value="6"/>
        <Setter Property="Padding" Value="8"/>
        <Setter Property="Margin" Value="5"/>
        <Setter Property="BorderBrush" Value="#DDDDDD"/>
        <Setter Property="BorderThickness" Value="1"/>
        <Setter Property="Background" Value="#FAFAFA"/>
    </Style>

    <Style x:Key="CardContent" TargetType="StackPanel">
        <Setter Property="Width" Value="150"/>
        <Setter Property="Height" Value="55"/>
        <Setter Property="HorizontalAlignment" Value="Center"/>
        <Setter Property="VerticalAlignment" Value="Center"/>
    </Style>

    <Style x:Key="CardSumText" TargetType="TextBlock">
        <Setter Property="FontWeight" Value="Regular"/>
        <Setter Property="FontSize" Value="16"/>
        <Setter Property="HorizontalAlignment" Value="Center"/>
        <Setter Property="Margin" Value="0,10,0,0"/> 
    </Style>

    <!-- Styles för transaktions-textblock i DataTemplates -->
    <Style x:Key="TransactionDateText" TargetType="TextBlock">
        <Setter Property="FontSize" Value="13"/>
        <Setter Property="Foreground" Value="#424242"/>
        <Setter Property="VerticalAlignment" Value="Center"/>
        <Setter Property="Margin" Value="0"/>
    </Style>

    <Style x:Key="TransactionCategoryText" TargetType="TextBlock">
        <Setter Property="FontSize" Value="13"/>
        <Setter Property="FontWeight" Value="SemiBold"/>
        <Setter Property="Foreground" Value="#1976D2"/>
        <Setter Property="VerticalAlignment" Value="Center"/>
        <Setter Property="Margin" Value="0"/>
    </Style>

    <Style x:Key="TransactionDescriptionText" TargetType="TextBlock">
        <Setter Property="FontSize" Value="13"/>
        <Setter Property="Foreground" Value="#616161"/>
        <Setter Property="VerticalAlignment" Value="Center"/>
        <Setter Property="TextTrimming" Value="CharacterEllipsis"/>
        <Setter Property="Margin" Value="0"/>
    </Style>

    <Style x:Key="TransactionAmountText" TargetType="TextBlock">
        <Setter Property="FontSize" Value="13"/>
        <Setter Property="FontWeight" Value="Bold"/>
        <Setter Property="VerticalAlignment" Value="Center"/>
        <Setter Property="HorizontalAlignment" Value="Right"/>
        <Setter Property="Margin" Value="0"/>
    </Style>

    <Style x:Key="IncomeAmountText" TargetType="TextBlock" BasedOn="{StaticResource TransactionAmountText}">
        <Setter Property="Foreground" Value="#2E7D32"/>
    </Style>

    <Style x:Key="ExpenseAmountText" TargetType="TextBlock" BasedOn="{StaticResource TransactionAmountText}">
        <Setter Property="Foreground" Value="#C62828"/>
    </Style>
    
    <!-- Kolumnheader border -->
    <Style x:Key="ColumnHeaderBorder" TargetType="Border">
        <Setter Property="BorderBrush" Value="#E0E0E0"/>
        <Setter Property="BorderThickness" Value="0,0,0,2"/>
        <Setter Property="Background" Value="#F5F5F5"/>
        <Setter Property="Padding" Value="10,5"/>
        <Setter Property="Margin" Value="0,5,0,0"/>
        <Setter Property="Height" Value="45"/> 
    </Style>

    <!-- Kolumnheader text -->
    <Style x:Key="ColumnHeaderText" TargetType="TextBlock">
        <Setter Property="FontSize" Value="16"/>
        <Setter Property="FontWeight" Value="SemiBold"/>
        <Setter Property="Foreground" Value="#424242"/>
        <Setter Property="Margin" Value="0"/>
        <Setter Property="VerticalAlignment" Value="Center"/>
        <Setter Property="HorizontalAlignment" Value="Left"/>
    </Style>

    <!-- Stil för borders i DataTemplates -->
    <Style x:Key="DataTemplateBorder" TargetType="Border">
        <Setter Property="BorderBrush" Value="#E0E0E0"/>
        <Setter Property="BorderThickness" Value="0,0,0,1"/>
        <Setter Property="Padding" Value="10,8"/>
        <Setter Property="Background" Value="Transparent"/>
    </Style>

    <!-- Stil för text i DataTemplates -->
    <Style x:Key="DataTemplateText" TargetType="TextBlock">
        <Setter Property="Margin" Value="0,1,0,0"/>
        <Setter Property="VerticalAlignment" Value="Center"/>
    </Style>

</ResourceDictionary>