<!-- Styles.xaml -->
<ResourceDictionary xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
                    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
                     xmlns:converters="clr-namespace:BudgetWPFKevin.Converters">

    <Thickness x:Key="SectionMargin">10</Thickness>

    <converters:StringToVisibilityConverter x:Key="StringToVisibilityConverter"/>

    <Style x:Key="SectionHeaderText" TargetType="TextBlock">
        <Setter Property="FontSize" Value="18"/>
        <Setter Property="FontWeight" Value="Bold"/>
        <Setter Property="Margin" Value="0,0,0,5"/>
    </Style>

    <Style TargetType="Window">
        <Setter Property="FontFamily" Value="pack://application:,,,/Fonts/#Nunito Light"/>
    </Style>

    <!-- Standard TextBlock Style -->
    <Style TargetType="TextBlock">
        <Setter Property="FontFamily" Value="pack://application:,,,/Fonts/#Nunito Light"/>
        <Setter Property="FontSize" Value="14"/>
        <Setter Property="Margin" Value="0,0,0,5"/>
    </Style>

    <!-- Standard TextBox Style -->
    <Style TargetType="TextBox">
        <Setter Property="FontSize" Value="14"/>
        <Setter Property="Padding" Value="5"/>
        <Setter Property="Margin" Value="0,0,0,15"/>
    </Style>

    <!-- Standard ComboBox Style -->
    <Style TargetType="ComboBox">
        <Setter Property="FontSize" Value="14"/>
        <Setter Property="Padding" Value="5"/>
        <Setter Property="Margin" Value="0,0,0,15"/>
    </Style>

    <!-- Standard Button Style -->
    <Style TargetType="Button">
        <Setter Property="FontSize" Value="14"/>
        <Setter Property="Padding" Value="15,8"/>
        <Setter Property="Margin" Value="5"/>
        <Setter Property="MinWidth" Value="100"/>
    </Style>


    <!-- ListBox Style för transaktionslistor -->
    <Style TargetType="ListBox">
        <Setter Property="BorderBrush" Value="#BDBDBD"/>
        <Setter Property="BorderThickness" Value="1"/>
        <Setter Property="Background" Value="White"/>
        <Setter Property="ScrollViewer.HorizontalScrollBarVisibility" Value="Disabled"/>
        <Setter Property="ScrollViewer.VerticalScrollBarVisibility" Value="Auto"/>
        <Setter Property="MaxHeight" Value="400"/>
        <Setter Property="Margin" Value="0,5,0,0"/>
    </Style>

    <!-- ListBoxItem Style för transaktioner -->
    <Style TargetType="ListBoxItem">
        <Setter Property="HorizontalContentAlignment" Value="Stretch"/>
        <Setter Property="Padding" Value="0"/>
        <Setter Property="Margin" Value="0"/>
        <Setter Property="Background" Value="Transparent"/>
        <Setter Property="BorderThickness" Value="0"/>
        <Style.Triggers>
            <Trigger Property="IsMouseOver" Value="True">
                <Setter Property="Background" Value="#F5F5F5"/>
            </Trigger>
            <Trigger Property="IsSelected" Value="True">
                <Setter Property="Background" Value="#E3F2FD"/>
            </Trigger>
        </Style.Triggers>
    </Style>


    <!-- Style för sammanfattningskort -->
    <Style x:Key="SummaryCard" TargetType="Border">
        <Setter Property="CornerRadius" Value="6"/>
        <Setter Property="Padding" Value="8"/>
        <Setter Property="Margin" Value="5"/>
        <Setter Property="BorderBrush" Value="#DDDDDD"/>
        <Setter Property="BorderThickness" Value="1"/>
        <Setter Property="Background" Value="#FAFAFA"/>
    </Style>

    <Style x:Key="CardContent" TargetType="StackPanel">
        <Setter Property="Width" Value="150"/>
        <Setter Property="Height" Value="55"/>
        <Setter Property="HorizontalAlignment" Value="Center"/>
        <Setter Property="VerticalAlignment" Value="Center"/>
    </Style>

    <!-- Styles för transaktions-textblock i DataTemplates -->
    <Style x:Key="TransactionDateText" TargetType="TextBlock">
        <Setter Property="FontSize" Value="13"/>
        <Setter Property="Foreground" Value="#424242"/>
        <Setter Property="VerticalAlignment" Value="Center"/>
        <Setter Property="Margin" Value="0"/>
    </Style>

    <Style x:Key="TransactionCategoryText" TargetType="TextBlock">
        <Setter Property="FontSize" Value="13"/>
        <Setter Property="FontWeight" Value="SemiBold"/>
        <Setter Property="Foreground" Value="#1976D2"/>
        <Setter Property="VerticalAlignment" Value="Center"/>
        <Setter Property="Margin" Value="0"/>
    </Style>

    <Style x:Key="TransactionDescriptionText" TargetType="TextBlock">
        <Setter Property="FontSize" Value="13"/>
        <Setter Property="Foreground" Value="#616161"/>
        <Setter Property="VerticalAlignment" Value="Center"/>
        <Setter Property="TextTrimming" Value="CharacterEllipsis"/>
        <Setter Property="Margin" Value="0"/>
    </Style>

    <Style x:Key="TransactionAmountText" TargetType="TextBlock">
        <Setter Property="FontSize" Value="13"/>
        <Setter Property="FontWeight" Value="Bold"/>
        <Setter Property="VerticalAlignment" Value="Center"/>
        <Setter Property="HorizontalAlignment" Value="Right"/>
        <Setter Property="Margin" Value="0"/>
    </Style>

    <Style x:Key="IncomeAmountText" TargetType="TextBlock" BasedOn="{StaticResource TransactionAmountText}">
        <Setter Property="Foreground" Value="#2E7D32"/>
    </Style>

    <Style x:Key="ExpenseAmountText" TargetType="TextBlock" BasedOn="{StaticResource TransactionAmountText}">
        <Setter Property="Foreground" Value="#C62828"/>
    </Style>
    
    <!-- Kolumnheader border -->
    <Style x:Key="ColumnHeaderBorder" TargetType="Border">
        <Setter Property="BorderBrush" Value="#E0E0E0"/>
        <Setter Property="BorderThickness" Value="0,0,0,2"/>
        <Setter Property="Background" Value="#F5F5F5"/>
        <Setter Property="Padding" Value="10,5"/>
        <Setter Property="Margin" Value="0,5,0,0"/>
        <Setter Property="Height" Value="45"/> 
    </Style>

    <!-- Kolumnheader text -->
    <Style x:Key="ColumnHeaderText" TargetType="TextBlock">
        <Setter Property="FontSize" Value="16"/>
        <Setter Property="FontWeight" Value="SemiBold"/>
        <Setter Property="Foreground" Value="#424242"/>
        <Setter Property="Margin" Value="0"/>
        <Setter Property="VerticalAlignment" Value="Center"/>
        <Setter Property="HorizontalAlignment" Value="Left"/>
    </Style>

    <!-- Datatemplate för frånvaoposter -->


    <Style x:Key="DataTemplateBorder" TargetType="Border">
        <Setter Property="BorderBrush" Value="#E0E0E0"/>
        <Setter Property="BorderThickness" Value="0,0,0,1"/>
        <Setter Property="Padding" Value="10,8"/>
        <Setter Property="Background" Value="Transparent"/>
    </Style>

    <Style x:Key="DataTemplateText" TargetType="TextBlock">
        <Setter Property="Margin" Value="0,1,0,0"/>
        <Setter Property="VerticalAlignment" Value="Center"/>
    </Style>


    <DataTemplate x:Key="AbsenceRecordTemplate">
        <Border Style="{StaticResource DataTemplateBorder}">
            <Grid>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="*"/>
                </Grid.ColumnDefinitions>

                <TextBlock Grid.Column="0" 
                           Text="{Binding Date, StringFormat=\{0:yyyy-MM-dd\}}" 
                           Style="{StaticResource TransactionDateText}"/>

                <TextBlock Grid.Column="1" 
                           Text="{Binding DisplayTypeName}" 
                           Style="{StaticResource TransactionCategoryText}"/>

                <TextBlock Grid.Column="2" 
                           Text="{Binding Hours, StringFormat=N1}" 
                           Style="{StaticResource TransactionDescriptionText}"
                           HorizontalAlignment="Left"/>
            </Grid>
        </Border>
    </DataTemplate>

    <!-- Datatemplate för inkomster/utgifter -->

    <DataTemplate x:Key="TransactionTemplate">
       <Border Style="{StaticResource DataTemplateBorder}">
            <Grid>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="100"/>
                    <ColumnDefinition Width="120"/>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="100"/>
                </Grid.ColumnDefinitions>

                <TextBlock Grid.Column="0" 
                           Text="{Binding Date, StringFormat=\{0:yyyy-MM-dd\}}" 
                           Foreground="#424242"
                           Style="{Binding DataTemplateText}"/>

                <TextBlock Grid.Column="1" 
                           Text="{Binding CategoryName}"
                           Style="{Binding DataTemplateText}"
                           FontWeight="SemiBold"
                           Foreground="#1976D2"/>

                <TextBlock Grid.Column="2" 
                           Text="{Binding Description}"
                           Style="{Binding DataTemplateText}"
                           TextTrimming="CharacterEllipsis"
                           Foreground="#616161"/>

                <TextBlock Grid.Column="3" 
                           Text="{Binding Amount, StringFormat={}{0:C0}, ConverterCulture=sv-SE}" 
                           Style="{Binding DataTemplateText}"
                           HorizontalAlignment="Right"
                           FontWeight="Bold"
                           Foreground="#2E7D32"/>
            </Grid>
        </Border>
    </DataTemplate>

    <!-- Datatemplate för återkommande transaktioner -->

    <DataTemplate x:Key="RecurringTransactionTemplate">
        <Border Style="{StaticResource DataTemplateBorder}">
            <Grid>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="80"/>
                    <ColumnDefinition Width="100"/>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="90"/>
                    <ColumnDefinition Width="80"/>
                    <ColumnDefinition Width="80"/>
                </Grid.ColumnDefinitions>

                <TextBlock Grid.Column="0" 
                           Text="{Binding DisplayType}" 
                           Style="{Binding DataTemplateText}"
                           FontWeight="SemiBold"
                           Foreground="#6A1B9A"/>

                <TextBlock Grid.Column="1" 
                           Text="{Binding CategoryName}" 
                           Style="{Binding DataTemplateText}"
                           VerticalAlignment="Center"
                           Foreground="#1976D2"/>

                <TextBlock Grid.Column="2" 
                           Text="{Binding Description}" 
                           Style="{Binding DataTemplateText}"
                           TextTrimming="CharacterEllipsis"
                           Foreground="#616161"/>

                <TextBlock Grid.Column="3" 
                           Text="{Binding Amount, StringFormat={}{0:C0}, ConverterCulture=sv-SE}" 
                           Style="{Binding DataTemplateText}"
                           HorizontalAlignment="Left"
                           FontWeight="Bold"
                           Foreground="#C62828"/>

                <TextBlock Grid.Column="4" 
                           Text="{Binding StartDate, StringFormat=\{0:yyyy-MM-dd\}}" 
                           Style="{Binding DataTemplateText}"
                           FontSize="11"
                           Foreground="#757575"/>

                <TextBlock Grid.Column="5" 
                           Text="{Binding EndDate, StringFormat=\{0:yyyy-MM-dd\}}" 
                           Style="{Binding DataTemplateText}"
                           FontSize="11"
                           Foreground="#757575"/>
            </Grid>
        </Border>
    </DataTemplate>

</ResourceDictionary>