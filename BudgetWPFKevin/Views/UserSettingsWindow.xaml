<Window x:Class="BudgetWPFKevin.Views.UserSettingsWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        mc:Ignorable="d"
        Title="Användarinställningar"
        Height="500"
        Width="500"
        WindowStartupLocation="CenterOwner"
        ResizeMode="NoResize"
        Background="{DynamicResource WindowBackgroundBrush}">

    <Grid Margin="20">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>

        <!-- Header -->
        <TextBlock Grid.Row="0"
                  Text="Ange din årsinkomst och arbetstid"
                  FontSize="18"
                  FontWeight="Bold"
                  Foreground="{DynamicResource PrimaryTextBrush}"
                  Margin="0,0,0,20"/>

        <!-- Årsinkomst -->
        <StackPanel Grid.Row="1">
            <TextBlock Text="Årsinkomst (kr):"
                      Foreground="{DynamicResource PrimaryTextBrush}"/>
            <TextBox Text="{Binding YearlyIncome, UpdateSourceTrigger=PropertyChanged}"/>
        </StackPanel>

        <!-- Årsarbetstid -->
        <StackPanel Grid.Row="2">
            <TextBlock Text="Årsarbetstid (timmar):"
                      Foreground="{DynamicResource PrimaryTextBrush}"/>
            <TextBox Text="{Binding YearlyWorkHours, UpdateSourceTrigger=PropertyChanged}"/>
            <TextBlock Text="(Standard: 1920 timmar = 40h/vecka * 48 veckor)"
                      FontSize="11"
                      Foreground="{DynamicResource SecondaryTextBrush}"
                      Margin="0,-10,0,10"/>
        </StackPanel>

        <!-- Skatt -->
        <StackPanel Grid.Row="3">
            <TextBlock Text="Skatt:"
                      Foreground="{DynamicResource PrimaryTextBrush}"/>
            <Grid>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="Auto"/>
                </Grid.ColumnDefinitions>

                <TextBox Grid.Column="0" 
                        Text="{Binding TaxRate, StringFormat=N2, UpdateSourceTrigger=PropertyChanged}"
                        IsEnabled="{Binding IsEditing}"/>

                <Button Grid.Column="1" 
                       Content="Ändra" 
                       Command="{Binding ToggleEditCommand}"
                       Width="50"
                       Height="36"
                       FontSize="10"
                       Padding="2"
                       Margin="5,0,0,15"/>
            </Grid>
        </StackPanel>

        <!-- Error -->
        <TextBlock Grid.Row="4"
                  Text="{Binding ValidationError}"
                  Foreground="{DynamicResource NegativeColorBrush}"
                  FontSize="12"
                  Visibility="{Binding ValidationError, Converter={StaticResource StringToVisibilityConverter}}"
                  Margin="0,0,0,10"/>

        <!-- Info -->
        <Border Grid.Row="5"
               Background="{DynamicResource SurfaceBrush}"
               BorderBrush="{DynamicResource SystemAccentBrush}"
               BorderThickness="1"
               CornerRadius="4"
               Padding="10"
               Margin="0,0,0,10">
            <StackPanel>
                <TextBlock Text="ℹ️ Information" 
                          FontWeight="Bold" 
                          Foreground="{DynamicResource PrimaryTextBrush}"
                          Margin="0,0,0,5"/>
                <TextBlock TextWrapping="Wrap" 
                          FontSize="12"
                          Foreground="{DynamicResource SecondaryTextBrush}">
                    <Run Text="Dessa uppgifter används för att beräkna din månadsinkomst och effekten av frånvaro (VAB/sjuk). Timlön beräknas som: Årsinkomst ÷ Årsarbetstid."/>
                </TextBlock>
            </StackPanel>
        </Border>

        <!-- Knappar -->
        <StackPanel Grid.Row="6"
                   Orientation="Horizontal"
                   HorizontalAlignment="Right">
            <Button Content="Spara"
                   Command="{Binding SaveCommand}"
                   IsDefault="True"/>
            <Button Content="Avbryt"
                   Command="{Binding CancelCommand}"
                   IsCancel="True"/>
        </StackPanel>
    </Grid>
</Window>
