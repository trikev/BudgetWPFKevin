<Window
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:ui="http://schemas.lepo.co/wpfui/2022/xaml" xmlns:local="clr-namespace:BudgetWPFKevin.Views" x:Class="BudgetWPFKevin.Views.UserSettingsWindow"
        mc:Ignorable="d"
        Title="Användarinställningar"
        Height="500"
        Width="500"
        WindowStartupLocation="CenterOwner"
        ResizeMode="NoResize">

    <Grid Margin="20">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>

        <!-- Header -->
        <TextBlock Grid.Row="0"
                   Text="Ange din årsinkomst och arbetstid"
                   Style="{StaticResource StandardHeaderText}"/>

        <!-- Årsinkomst -->
        <StackPanel Grid.Row="1">
            <TextBlock Text="Årsinkomst (kr):"/>
            <TextBox Text="{Binding YearlyIncome, UpdateSourceTrigger=PropertyChanged}"/>
        </StackPanel>

        <!-- Årsarbetstid -->
        <StackPanel Grid.Row="2">
            <TextBlock Text="Årsarbetstid (timmar):"/>
            <TextBox Text="{Binding YearlyWorkHours, UpdateSourceTrigger=PropertyChanged}"/>
            <TextBlock Text="(Standard: 1920 timmar = 40h/vecka * 48 veckor)"
                       FontSize="11"
                       Foreground="Gray"
                       Margin="0,-10,0,10"/>
        </StackPanel>

        <StackPanel Grid.Row="3">
            <TextBlock Text="Skatt:"/>
            <Grid>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="Auto"/>
                </Grid.ColumnDefinitions>

                <TextBox Grid.Column="0" 
                        Text="{Binding TaxRate, StringFormat=N2, UpdateSourceTrigger=PropertyChanged}"
                        IsEnabled="{Binding IsEditing}"
                         Margin="3"/>

                <Button Grid.Column="1" 
                        Content="Ändra" 
                        Command="{Binding ToggleEditCommand}"/>
            </Grid>
        </StackPanel>

        <!-- Error -->
        <TextBlock Grid.Row="3"
                   Text="{Binding ValidationError}"
                   Foreground="Red"
                   FontSize="12"
                   Visibility="{Binding ValidationError, Converter={StaticResource StringToVisibilityConverter}}"
                   Margin="0,0,0,10"/>

        <!-- Info -->
        <Border Grid.Row="4"
                Background="#E3F2FD"
                BorderBrush="#2196F3"
                BorderThickness="1"
                CornerRadius="5"
                Padding="10"
                Margin="0,10,0,10">
            <StackPanel>
                <TextBlock Text="ℹ️ Information" FontWeight="Bold" Margin="0,0,0,5"/>
                <TextBlock TextWrapping="Wrap" FontSize="12"><Run Text="Dessa uppgifter används för att beräkna din månadsinkomst och effekten av frånvaro (VAB/sjuk). Timlön beräknas som: Årsinkomst ÷ Årsarbetstid."/></TextBlock>
            </StackPanel>
        </Border>

        <StackPanel Grid.Row="6"
                    Orientation="Horizontal"
                    HorizontalAlignment="Right">
            <Button Content="Spara"
                    Command="{Binding SaveCommand}"
                    IsDefault="True"/>
            <Button Content="Avbryt"
                    Command="{Binding CancelCommand}"
                    IsCancel="True"/>
        </StackPanel>
    </Grid>
</Window>