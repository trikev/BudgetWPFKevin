<Window x:Class="BudgetWPFKevin.Views.AbsenceWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:models="clr-namespace:BudgetWPFKevin.Models"
        mc:Ignorable="d"
        Title="Lägg till frånvaro"
        Height="550"
        Width="500"
        WindowStartupLocation="CenterOwner"
        ResizeMode="NoResize">

    <Window.Resources>
        <ResourceDictionary>
            <ResourceDictionary.MergedDictionaries>
                <ResourceDictionary Source="/Resources/Styles.xaml"/>
            </ResourceDictionary.MergedDictionaries>


        </ResourceDictionary>
    </Window.Resources>

    <Grid Margin="20">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>

        <!-- Header -->
        <TextBlock Grid.Row="0"
                   Text="Registrera frånvaro"
                   FontSize="18"
                   FontWeight="Bold"
                   Margin="0,0,0,20"/>

        <!-- Date -->
        <StackPanel Grid.Row="1">
            <TextBlock Text="Datum:"/>
            <DatePicker SelectedDate="{Binding Date, Mode=TwoWay}"/>
        </StackPanel>

        <!-- Type -->
        <StackPanel Grid.Row="2">
            <TextBlock Text="Typ:"/>
            <ComboBox ItemsSource="{Binding AbsenceTypeDisplays}"
                      DisplayMemberPath="DisplayName"
                      SelectedValuePath="Type"
                      SelectedValue="{Binding SelectedType, Mode=TwoWay}">
            </ComboBox>
        </StackPanel>

        <!-- Hours -->
        <StackPanel Grid.Row="3">
            <TextBlock Text="Timmar:"/>
            <TextBox Text="{Binding Hours, UpdateSourceTrigger=PropertyChanged}"/>
        </StackPanel>

        <!-- Validation Error -->
        <TextBlock Grid.Row="4"
                   Text="{Binding ValidationError}"
                   Foreground="Red"
                   FontSize="12"
                   Visibility="{Binding ValidationError}"
                   Margin="0,0,0,10"/>

        <!-- Info Box -->
        <Border Grid.Row="5"
                Background="#FFF3E0"
                BorderBrush="#FF9800"
                BorderThickness="1"
                CornerRadius="5"
                Padding="10"
                Margin="0,0,0,10">
            <StackPanel>
                <TextBlock Text="ℹ️ Beräkning av frånvaro" FontWeight="Bold" Margin="0,0,0,5"/>
                <TextBlock TextWrapping="Wrap" FontSize="12">
                    • Avdrag beräknas baserat på din timlön
                </TextBlock>
                <TextBlock TextWrapping="Wrap" FontSize="12">
                    • Ersättning är 80% av avdraget
                </TextBlock>
                <TextBlock TextWrapping="Wrap" FontSize="12">
                    • För VAB gäller inkomsttak på 410 000 kr/år (7,5 PBB)
                </TextBlock>
                <TextBlock TextWrapping="Wrap" FontSize="12">
                    • För sjuk används din faktiska lön
                </TextBlock>
            </StackPanel>
        </Border>

        <!-- Buttons -->
        <StackPanel Grid.Row="7"
                    Orientation="Horizontal"
                    HorizontalAlignment="Right">
            <Button Content="Spara"
                    Command="{Binding SaveCommand}"
                    IsDefault="True"/>
            <Button Content="Avbryt"
                    Command="{Binding CancelCommand}"
                    IsCancel="True"/>
        </StackPanel>
    </Grid>
</Window>