<Window x:Class="BudgetWPFKevin.Views.AbsenceWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:models="clr-namespace:BudgetWPFKevin.Models"
        mc:Ignorable="d"
        Title="Lägg till frånvaro"
        Height="550"
        Width="500"
        WindowStartupLocation="CenterOwner"
        ResizeMode="NoResize"
        Background="{DynamicResource WindowBackgroundBrush}">

    <Grid Margin="20">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>

        <!-- Header -->
        <TextBlock Grid.Row="0"
                  Text="Registrera frånvaro"
                  FontSize="18"
                  FontWeight="Bold"
                  Foreground="{DynamicResource PrimaryTextBrush}"
                  Margin="0,0,0,20"/>

        <!-- Datum -->
        <StackPanel Grid.Row="1">
            <TextBlock Text="Datum:"
                      Foreground="{DynamicResource PrimaryTextBrush}"/>
            <DatePicker SelectedDate="{Binding Date, Mode=TwoWay}"/>
        </StackPanel>

        <!-- Typ -->
        <StackPanel Grid.Row="2">
            <TextBlock Text="Typ:"
                      Foreground="{DynamicResource PrimaryTextBrush}"/>
            <ComboBox ItemsSource="{Binding AbsenceTypeDisplays}"
                     DisplayMemberPath="DisplayName"
                     SelectedValuePath="Type"
                     SelectedValue="{Binding SelectedType, Mode=TwoWay}"/>
        </StackPanel>

        <!-- Timmar -->
        <StackPanel Grid.Row="3">
            <TextBlock Text="Timmar:"
                      Foreground="{DynamicResource PrimaryTextBrush}"/>
            <TextBox Text="{Binding Hours, UpdateSourceTrigger=PropertyChanged}"/>
        </StackPanel>

        <!-- Error -->
        <TextBlock Grid.Row="4"
                  Text="{Binding ValidationError}"
                  Foreground="{DynamicResource NegativeColorBrush}"
                  FontSize="12"
                  Visibility="{Binding ValidationError}"
                  Margin="0,0,0,10"/>

        <!-- Info -->
        <Border Grid.Row="5"
               Background="{DynamicResource SurfaceBrush}"
               BorderBrush="{DynamicResource SystemAccentBrush}"
               BorderThickness="1"
               CornerRadius="4"
               Padding="10"
               Margin="0,0,0,10">
            <StackPanel>
                <TextBlock Text="ℹ️ Beräkning av frånvaro" 
                          FontWeight="Bold"
                          Foreground="{DynamicResource PrimaryTextBrush}"
                          Margin="0,0,0,5"/>
                <TextBlock TextWrapping="Wrap" 
                          FontSize="12"
                          Foreground="{DynamicResource SecondaryTextBrush}">
                    • Avdrag beräknas baserat på din timlön
                </TextBlock>
                <TextBlock TextWrapping="Wrap" 
                          FontSize="12"
                          Foreground="{DynamicResource SecondaryTextBrush}">
                    • Ersättning är 80% av avdraget
                </TextBlock>
                <TextBlock TextWrapping="Wrap" 
                          FontSize="12"
                          Foreground="{DynamicResource SecondaryTextBrush}">
                    • För VAB gäller inkomsttak på 410 000 kr/år (7,5 PBB)
                </TextBlock>
                <TextBlock TextWrapping="Wrap" 
                          FontSize="12"
                          Foreground="{DynamicResource SecondaryTextBrush}">
                    • För sjuk används din faktiska lön
                </TextBlock>
            </StackPanel>
        </Border>

        <!-- Knappar -->
        <StackPanel Grid.Row="7"
                   Orientation="Horizontal"
                   HorizontalAlignment="Right">
            <Button Content="Spara"
                   Command="{Binding SaveCommand}"
                   IsDefault="True"/>
            <Button Content="Avbryt"
                   Command="{Binding CancelCommand}"
                   IsCancel="True"/>
        </StackPanel>
    </Grid>
</Window>
