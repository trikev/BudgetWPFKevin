<UserControl x:Class="BudgetWPFKevin.Views.TransactionListsView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:vm="clr-namespace:BudgetWPFKevin.ViewModels.Transactions">

    <UserControl.Resources>
        <ResourceDictionary>
            <ResourceDictionary.MergedDictionaries>
                <ResourceDictionary Source="/BudgetWPFKevin;component/Resources/Styles.xaml"/>
            </ResourceDictionary.MergedDictionaries>
        </ResourceDictionary>
    </UserControl.Resources>

    <Grid Margin="10">
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="*"/>
            <ColumnDefinition Width="*"/>
            <ColumnDefinition Width="*"/>
        </Grid.ColumnDefinitions>

        <!-- INKOMSTER -->
        <StackPanel Grid.Column="0" Margin="{StaticResource SectionMargin}">
            <TextBlock Text="Alla Inkomster" Style="{StaticResource SectionHeaderText}"/>

            <!-- Kolumnrubriker -->
            <Border Style="{StaticResource ColumnHeaderBorder}">
                <Grid>
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="100"/>
                        <ColumnDefinition Width="120"/>
                        <ColumnDefinition Width="*"/>
                        <ColumnDefinition Width="100"/>
                    </Grid.ColumnDefinitions>

                    <TextBlock Grid.Column="0" Text="Datum" Style="{StaticResource ColumnHeaderText}"/>
                    <TextBlock Grid.Column="1" Text="Kategori" Style="{StaticResource ColumnHeaderText}"/>
                    <TextBlock Grid.Column="2" Text="Beskrivning" Style="{StaticResource ColumnHeaderText}"/>
                    <TextBlock Grid.Column="3" Text="Belopp" Style="{StaticResource ColumnHeaderText}" HorizontalAlignment="Right"/>
                </Grid>
            </Border>

            <ListBox ItemsSource="{Binding RegularTransactions.Incomes}" 
                     SelectedItem="{Binding RegularTransactions.SelectedTransaction, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}"
                     ItemTemplate="{StaticResource TransactionTemplate}"
                     Margin="0"/>
        </StackPanel>

        <!-- UTGIFTER -->
        <StackPanel Grid.Column="1" Margin="{StaticResource SectionMargin}">
            <TextBlock Text="Engångsutgifter" Style="{StaticResource SectionHeaderText}"/>

            <!-- Kolumnrubriker -->
            <Border Style="{StaticResource ColumnHeaderBorder}">
                <Grid>
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="100"/>
                        <ColumnDefinition Width="120"/>
                        <ColumnDefinition Width="*"/>
                        <ColumnDefinition Width="100"/>
                    </Grid.ColumnDefinitions>

                    <TextBlock Grid.Column="0" Text="Datum" Style="{StaticResource ColumnHeaderText}"/>
                    <TextBlock Grid.Column="1" Text="Kategori" Style="{StaticResource ColumnHeaderText}"/>
                    <TextBlock Grid.Column="2" Text="Beskrivning" Style="{StaticResource ColumnHeaderText}"/>
                    <TextBlock Grid.Column="3" Text="Belopp" Style="{StaticResource ColumnHeaderText}" HorizontalAlignment="Right"/>
                </Grid>
            </Border>

            <ListBox ItemsSource="{Binding RegularTransactions.Expenses}" 
                     SelectedItem="{Binding RegularTransactions.SelectedTransaction, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}"
                     ItemTemplate="{StaticResource TransactionTemplate}"
                     Margin="0"/>
        </StackPanel>

        <!-- ÅTERKOMMANDE -->
        <StackPanel Grid.Column="2" Margin="{StaticResource SectionMargin}">
            <TextBlock Text="Återkommande transaktioner" Style="{StaticResource SectionHeaderText}"/>

            <!-- Kolumnrubriker -->
            <Border Style="{StaticResource ColumnHeaderBorder}">
                <Grid>
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="80"/>
                        <ColumnDefinition Width="100"/>
                        <ColumnDefinition Width="*"/>
                        <ColumnDefinition Width="90"/>
                        <ColumnDefinition Width="80"/>
                        <ColumnDefinition Width="80"/>
                    </Grid.ColumnDefinitions>

                    <TextBlock Grid.Column="0" Text="Typ" Style="{StaticResource ColumnHeaderText}"/>
                    <TextBlock Grid.Column="1" Text="Kategori" Style="{StaticResource ColumnHeaderText}"/>
                    <TextBlock Grid.Column="2" Text="Beskrivning" Style="{StaticResource ColumnHeaderText}"/>
                    <TextBlock Grid.Column="3" Text="Belopp" Style="{StaticResource ColumnHeaderText}"/>
                    <TextBlock Grid.Column="4" Text="Start" Style="{StaticResource ColumnHeaderText}"/>
                    <TextBlock Grid.Column="5" Text="Slut" Style="{StaticResource ColumnHeaderText}"/>
                </Grid>
            </Border>

            <ListBox ItemsSource="{Binding RecurringTransactions.RecurringTransactions}" 
                     SelectedItem="{Binding RecurringTransactions.SelectedRecurring, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}"
                     ItemTemplate="{StaticResource RecurringTransactionTemplate}"
                     
                     Margin="0"/>
        </StackPanel>
    </Grid>
</UserControl>