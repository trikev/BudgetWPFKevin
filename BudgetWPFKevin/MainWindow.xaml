<Window x:Class="BudgetWPFKevin.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:BudgetWPFKevin"
        xmlns:views="clr-namespace:BudgetWPFKevin.Views"
        mc:Ignorable="d"
        Title="Budget App" 
        Height="840" 
        Width="1280"
        Background="{DynamicResource WindowBackgroundBrush}">

    <Grid Margin="10">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>

        <!-- Monthly Summary -->
        <views:MonthlySummaryView Grid.Row="0" 
                                  DataContext="{Binding MonthlySummaryVM}" 
                                  Margin="0,0,0,10"/>

        <!-- Toolbar -->
        <StackPanel Grid.Row="1" 
                   Orientation="Horizontal" 
                   Margin="0,0,0,10">
            <Button Command="{Binding AddCommand}"
                   Content="➕ Ny transaktion"/>
            <Button Command="{Binding EditCommand}"
                   Content="✏️ Redigera"/>
            <Button Command="{Binding TransactionCoordinator.DeleteCommand}"
                   Content="🗑️ Ta bort"/>
            <Separator Width="1" Margin="10,0"/>
            <Button Command="{Binding OpenUserSettingsCommand}"
                   Content="⚙️ Inställningar"/>
            <Button Command="{Binding AddAbsenceCommand}"
                   Content="📅 Lägg till frånvaro"/>
        </StackPanel>

        <!-- Transaction Lists -->
        <views:TransactionListsView Grid.Row="2" 
                                   DataContext="{Binding TransactionCoordinator}"/>

        <!-- Absence Summary -->
        <views:AbsenceSummaryView Grid.Row="3" 
                                 DataContext="{Binding AbsenceSummaryVM}"
                                 Margin="0,10,0,0"/>
    </Grid>
</Window>
